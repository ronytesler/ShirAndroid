<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/EventTheme">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_row_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/avatar_poe84it"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_row_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drag nigght shie"
                style="@style/EventNameTheme"/>
            <TextView
                android:id="@+id/event_row_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="monday, may 29 at 7 pm"
                style="@style/EventVotesTheme"/>
            <TextView
                android:id="@+id/event_row_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="haaliya 62 tel aviv"
                style="@style/EventVotesTheme"/>
            <TextView
                android:id="@+id/event_row_invitation_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lital levy invaited you to this private event"
                android:textColor="@color/gray"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_row_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/event_row_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/status_prompt"/>
        <Button
            android:id="@+id/btn_event_row_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightBlue"
            android:text="Set your event preference"
            android:textColor="@color/white"
            android:onClick="preferenceClickHandler"/>
    </LinearLayout>
</LinearLayout>
