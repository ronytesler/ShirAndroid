<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.shir.androidfinalproject.Fragments.AddDatesFragment">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="3dp"
       android:text="Set event last update date"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_last_update_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="20dp"
            android:text="02/09/2017"/>
        <ImageView
            android:id="@+id/iv_last_update_date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add_button"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="Set event duration"/>
    <NumberPicker
        android:id="@+id/np_duration"
        android:layout_height="80dp"
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="Add date"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_add_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="20dp"
            android:text="03/09/2017"/>
        <TextView
            android:id="@+id/tv_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="20dp"
            android:text="16:00"/>
        <ImageView
            android:id="@+id/iv_add_date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add_button"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_dates_list"
        android:layout_margin="3dp">
    </ListView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_invite_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/next_button"
        app:backgroundTint="@color/iconBack"
        app:layout_anchor="@id/lv_dates_list"
        app:layout_anchorGravity="bottom|right|end"
      />
</LinearLayout>
